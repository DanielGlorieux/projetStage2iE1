# Configuration de la base de donn√©es MongoDB
MONGODB_URI=mongodb://localhost:27017/led-platform
# Pour MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/led-platform

# Configuration JWT
JWT_SECRET=votre_secret_jwt_super_securise_ici_minimum_32_caracteres
JWT_EXPIRE=7d

# Configuration du serveur
NODE_ENV=development
PORT=5000

# URL du frontend (pour CORS)
FRONTEND_URL=http://localhost:3000

# Configuration email (pour les notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-mot-de-passe-application
EMAIL_FROM=noreply@2ie-edu.org

# Configuration uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configuration rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configuration de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration Redis (optionnel, pour les sessions)
REDIS_URL=redis://localhost:6379

# Configuration de surveillance (optionnel)
SENTRY_DSN=votre_sentry_dsn_ici

# Configuration des notifications push (optionnel)
VAPID_PUBLIC_KEY=votre_cle_publique_vapid
VAPID_PRIVATE_KEY=votre_cle_privee_vapid